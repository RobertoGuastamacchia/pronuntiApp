<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:scrollbars="none"
    tools:context=".patient.child.homepage.exercises.WordsSequencesRepetitionFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/home_page_child_margin_top_of_layout"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/help"
                    android:layout_width="@dimen/topButtonExercisesDimension"
                    android:layout_height="@dimen/topButtonExercisesDimension"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/marginStartHelpIcon"
                    android:layout_marginTop="@dimen/marginTopTopButtonExercises"
                    android:background="@color/transparent"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/help_icon" />

                <ImageButton
                    android:id="@+id/exit"
                    android:layout_width="@dimen/topButtonExercisesDimension"
                    android:layout_height="@dimen/topButtonExercisesDimension"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/marginTopTopButtonExercises"
                    android:layout_marginEnd="@dimen/marginEndExitButton"
                    android:background="@color/transparent"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/exit" />


                <ImageButton
                    android:id="@+id/refresh"
                    android:layout_width="@dimen/topButtonExercisesDimension"
                    android:layout_height="@dimen/topButtonExercisesDimension"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/marginStartRefreshIcon"
                    android:layout_marginTop="@dimen/marginTopTopButtonExercises"
                    android:background="@color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/refresh"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/exerciseDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/marginTopExerciseDescription"
            android:ellipsize="none"
            android:singleLine="false"
            android:text="@string/ImageDenomination"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/exerciseDescriptionSize"
            android:textStyle="bold"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/marginOfHelpSectionTherapist"
            android:layout_marginTop="@dimen/marginOfHelpSectionTherapist"
            android:layout_marginEnd="@dimen/marginOfHelpSectionTherapist"
            android:layout_marginBottom="@dimen/marginOfHelpSectionTherapist"
            android:background="@drawable/roundend_background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/helpTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/marginTopExerciseDescription"
                android:ellipsize="none"
                android:singleLine="false"
                android:text="@string/helpWindowDialogTitle"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/exerciseDescriptionSize"
                android:textStyle="bold"></TextView>


            <ImageButton
                android:id="@+id/startAudio"
                android:layout_width="@dimen/recordAudioButtonDimension"
                android:layout_height="@dimen/recordAudioButtonDimension"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/marginTopRecordAudioButton"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/microphone"></ImageButton>

            <TextView
                android:id="@+id/startAudioButtonDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/marginBottomHelpSectionTherapist"
                android:labelFor="@+id/startAudio"
                android:text="@string/record_audio"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/recordButtonLabelDimension"
                android:textStyle="bold"></TextView>

            <ImageButton
                android:id="@+id/stopAudio"
                android:layout_width="@dimen/stopAudioButtonDimension"
                android:layout_height="@dimen/stopAudioButtonDimension"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/marginTopRecordAudioButton"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/stop_audio"
                android:visibility="gone"></ImageButton>

            <TextView
                android:id="@+id/stopAudioButtonDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:labelFor="@+id/stopAudio"
                android:text="@string/stop_audio"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/stopButtonLabelDimension"
                android:textStyle="bold"
                android:visibility="gone"></TextView>

            <ImageButton
                android:id="@+id/listenYourAudio"
                android:layout_width="@dimen/audioDoneImageDimension"
                android:layout_height="@dimen/audioDoneImageDimension"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/marginTopDoneImage"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/listen_your_audio"
                android:visibility="gone"></ImageButton>

            <ImageButton
                android:id="@+id/stopYourAudio"
                android:layout_width="@dimen/stopAudioButtonDimension"
                android:layout_height="@dimen/stopAudioButtonDimension"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/marginTopDoneImage"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/stop_audio"
                android:visibility="gone"></ImageButton>

            <TextView
                android:id="@+id/audioDoneDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/marginStartEndOfAudioDoneDescription"
                android:layout_marginEnd="@dimen/marginStartEndOfAudioDoneDescription"
                android:layout_marginBottom="@dimen/marginBottomHelpSectionTherapist"
                android:labelFor="@+id/audioDone"
                android:text="@string/audio_done"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/doneLabelDimension"
                android:textStyle="bold"
                android:visibility="gone"></TextView>

            <ImageView
                android:id="@+id/sound_wave"
                android:layout_width="@dimen/soundDimension"
                android:layout_height="@dimen/soundDimension"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/marginTopDoneAndSoundWave"
                android:background="@color/transparent"
                android:src="@drawable/sound_wave"
                android:visibility="gone"></ImageView>

            <ImageButton
                android:id="@+id/upload_audio"
                android:layout_width="@dimen/stopAudioButtonDimension"
                android:layout_height="@dimen/stopAudioButtonDimension"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/marginTopDoneImage"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/upload_audio"
                android:visibility="gone"></ImageButton>

            <TextView
                android:id="@+id/upload_audio_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:labelFor="@+id/upload_audio"
                android:text="@string/uploadAudioDescription"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/stopButtonLabelDimension"
                android:textStyle="bold"
                android:visibility="gone"></TextView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/help2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/marginOfHelpSectionTherapist"
            android:layout_marginTop="@dimen/marginOfHelpSectionTherapist"
            android:layout_marginEnd="@dimen/marginOfHelpSectionTherapist"
            android:layout_marginBottom="@dimen/marginOfHelpSectionTherapist"
            android:background="@drawable/roundend_background"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/helpTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/marginTopExerciseDescription"
                android:ellipsize="none"
                android:fontFamily="@font/bubblegum_sans"
                android:singleLine="false"
                android:text="@string/helpWindowDialogTitle"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/exerciseDescriptionSize"
                android:textStyle="bold"></TextView>


            <ImageButton
                android:id="@+id/startAudio2"
                android:layout_width="@dimen/recordAudioButtonDimension"
                android:layout_height="@dimen/recordAudioButtonDimension"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/marginTopRecordAudioButton"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/microphone"></ImageButton>

            <TextView
                android:id="@+id/startAudioButtonDescription2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/marginBottomHelpSectionTherapist"
                android:fontFamily="@font/bubblegum_sans"
                android:labelFor="@+id/startAudio2"
                android:text="@string/record_audio"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/recordButtonLabelDimension"
                android:textStyle="bold"></TextView>

            <ImageButton
                android:id="@+id/stopAudio2"
                android:layout_width="@dimen/stopAudioButtonDimension"
                android:layout_height="@dimen/stopAudioButtonDimension"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/marginTopRecordAudioButton"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/stop_audio"
                android:visibility="gone"></ImageButton>

            <TextView
                android:id="@+id/stopAudioButtonDescription2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/bubblegum_sans"
                android:labelFor="@+id/stopAudio2"
                android:text="@string/stop_audio"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/stopButtonLabelDimension"
                android:textStyle="bold"
                android:visibility="gone"></TextView>

            <ImageButton
                android:id="@+id/listenYourAudio2"
                android:layout_width="@dimen/audioDoneImageDimension"
                android:layout_height="@dimen/audioDoneImageDimension"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/marginTopDoneImage"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/listen_your_audio"
                android:visibility="gone"></ImageButton>

            <ImageButton
                android:id="@+id/stopYourAudio2"
                android:layout_width="@dimen/stopAudioButtonDimension"
                android:layout_height="@dimen/stopAudioButtonDimension"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/marginTopDoneImage"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/stop_audio"
                android:visibility="gone"></ImageButton>

            <TextView
                android:id="@+id/audioDoneDescription2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/marginStartEndOfAudioDoneDescription"
                android:layout_marginEnd="@dimen/marginStartEndOfAudioDoneDescription"
                android:layout_marginBottom="@dimen/marginBottomHelpSectionTherapist"
                android:fontFamily="@font/bubblegum_sans"
                android:labelFor="@+id/audioDone2"
                android:text="@string/audio_done"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/doneLabelDimension"
                android:textStyle="bold"
                android:visibility="gone"></TextView>

            <ImageView
                android:id="@+id/sound_wave2"
                android:layout_width="@dimen/soundDimension"
                android:layout_height="@dimen/soundDimension"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/marginTopDoneAndSoundWave"
                android:background="@color/transparent"
                android:src="@drawable/sound_wave"
                android:visibility="gone"></ImageView>

            <ImageButton
                android:id="@+id/upload_audio2"
                android:layout_width="@dimen/stopAudioButtonDimension"
                android:layout_height="@dimen/stopAudioButtonDimension"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/marginTopDoneImage"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/upload_audio"
                android:visibility="gone"></ImageButton>

            <TextView
                android:id="@+id/upload_audio_description2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/bubblegum_sans"
                android:labelFor="@+id/upload_audio2"
                android:text="@string/uploadAudioDescription"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/stopButtonLabelDimension"
                android:textStyle="bold"
                android:visibility="gone"></TextView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/help3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/marginOfHelpSectionTherapist"
            android:layout_marginTop="@dimen/marginOfHelpSectionTherapist"
            android:layout_marginEnd="@dimen/marginOfHelpSectionTherapist"
            android:layout_marginBottom="@dimen/marginOfHelpSectionTherapist"
            android:background="@drawable/roundend_background"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/helpTitle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/marginTopExerciseDescription"
                android:ellipsize="none"
                android:fontFamily="@font/bubblegum_sans"
                android:singleLine="false"
                android:text="@string/helpWindowDialogTitle"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/exerciseDescriptionSize"
                android:textStyle="bold"></TextView>


            <ImageButton
                android:id="@+id/startAudio3"
                android:layout_width="@dimen/recordAudioButtonDimension"
                android:layout_height="@dimen/recordAudioButtonDimension"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/marginTopRecordAudioButton"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/microphone"></ImageButton>

            <TextView
                android:id="@+id/startAudioButtonDescription3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/marginBottomHelpSectionTherapist"
                android:fontFamily="@font/bubblegum_sans"
                android:labelFor="@+id/startAudio3"
                android:text="@string/record_audio"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/recordButtonLabelDimension"
                android:textStyle="bold"></TextView>

            <ImageButton
                android:id="@+id/stopAudio3"
                android:layout_width="@dimen/stopAudioButtonDimension"
                android:layout_height="@dimen/stopAudioButtonDimension"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/marginTopRecordAudioButton"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/stop_audio"
                android:visibility="gone"></ImageButton>

            <TextView
                android:id="@+id/stopAudioButtonDescription3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/bubblegum_sans"
                android:labelFor="@+id/stopAudio3"
                android:text="@string/stop_audio"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/stopButtonLabelDimension"
                android:textStyle="bold"
                android:visibility="gone"></TextView>

            <ImageButton
                android:id="@+id/listenYourAudio3"
                android:layout_width="@dimen/audioDoneImageDimension"
                android:layout_height="@dimen/audioDoneImageDimension"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/marginTopDoneImage"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/listen_your_audio"
                android:visibility="gone"></ImageButton>

            <ImageButton
                android:id="@+id/stopYourAudio3"
                android:layout_width="@dimen/stopAudioButtonDimension"
                android:layout_height="@dimen/stopAudioButtonDimension"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/marginTopDoneImage"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/stop_audio"
                android:visibility="gone"></ImageButton>

            <TextView
                android:id="@+id/audioDoneDescription3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/marginStartEndOfAudioDoneDescription"
                android:layout_marginEnd="@dimen/marginStartEndOfAudioDoneDescription"
                android:layout_marginBottom="@dimen/marginBottomHelpSectionTherapist"
                android:fontFamily="@font/bubblegum_sans"
                android:labelFor="@+id/audioDone3"
                android:text="@string/audio_done"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/doneLabelDimension"
                android:textStyle="bold"
                android:visibility="gone"></TextView>

            <ImageView
                android:id="@+id/sound_wave3"
                android:layout_width="@dimen/soundDimension"
                android:layout_height="@dimen/soundDimension"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/marginTopDoneAndSoundWave"
                android:background="@color/transparent"
                android:src="@drawable/sound_wave"
                android:visibility="gone"></ImageView>

            <ImageButton
                android:id="@+id/upload_audio3"
                android:layout_width="@dimen/stopAudioButtonDimension"
                android:layout_height="@dimen/stopAudioButtonDimension"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/marginTopDoneImage"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/upload_audio"
                android:visibility="gone"></ImageButton>

            <TextView
                android:id="@+id/upload_audio_description3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/bubblegum_sans"
                android:labelFor="@+id/upload_audio3"
                android:text="@string/uploadAudioDescription"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/stopButtonLabelDimension"
                android:textStyle="bold"
                android:visibility="gone"></TextView>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/primary"
            android:visibility="gone" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/marginTopDone"
            android:layout_marginBottom="@dimen/marginBottomOfFinishButtonInHelpTherapist"
            android:gravity="center"
            android:text="@string/finishExercises"
            android:textAlignment="center"
            android:textSize="@dimen/text_dimen"
            android:textStyle="bold"
            android:visibility="gone"
            app:backgroundTint="@color/primary"
            app:cornerRadius="8dp" />


    </LinearLayout>

</ScrollView>