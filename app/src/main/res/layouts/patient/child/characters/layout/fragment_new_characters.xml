<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary"
    tools:context=".patient.child.ChildRewardsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageButton
            android:id="@+id/cage"
            android:layout_width="@dimen/treasureDimension"
            android:layout_height="@dimen/treasureDimension"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/cage_close" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/linearLayout"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/newCharacterTitle"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="@string/newCharacterTitle"
                android:textSize="@dimen/newCharacterTitleSize"
                android:textColor="@color/white"
                android:fontFamily="@font/bubblegum_sans" />

            <ImageView
            android:layout_width="@dimen/treasureDimension"
            android:layout_height="@dimen/treasureDimension"
            android:id="@+id/newCharacter"
            android:layout_marginTop="@dimen/marginBetweenNewCharacterAndItsName"
            android:visibility="gone"
            android:scaleType="centerInside"
            android:background="@color/transparent"
            android:layout_gravity="center_horizontal" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/newCharacterName"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                android:singleLine="true"
                android:textStyle="bold"
                android:textSize="@dimen/newCharacterNameSize"
                android:textColor="@color/white"
                android:fontFamily="@font/bubblegum_sans" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTopCloseButtonRewardsFragment"
                android:textAlignment="center"
                app:cornerRadius="8dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/closePopupButton"
                android:fontFamily="@font/bubblegum_sans"
                android:id="@+id/closeButton"
                android:visibility="gone"
                android:textStyle="bold"
                android:backgroundTint="@color/colorBackground_primary"
                android:textSize="@dimen/text_dimen" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newCharacterDescription"
            android:layout_marginStart="@dimen/speechBubbleMarginStartAndEnd"
            android:layout_marginEnd="@dimen/speechBubbleMarginStartAndEnd"
            android:layout_marginBottom="@dimen/speechBubbleMarginBottom"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:fontFamily="@font/bubblegum_sans"
            android:textStyle="bold"
            android:textSize="@dimen/text_dimen"
            android:textAlignment="center"
            android:text="@string/newCharacterDescription" />

    </LinearLayout>

</FrameLayout>