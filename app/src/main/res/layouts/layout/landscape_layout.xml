<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/screenOrientationImageSize"
            android:layout_height="@dimen/screenOrientationImageSize"
            android:background="@color/transparent"
            android:src="@drawable/screen_orientation" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bubblegum_sans"
            android:text="@string/screenOrientation"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/screenOrientationTextSize" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
