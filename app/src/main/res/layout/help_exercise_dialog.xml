<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/logoutWindowPadding"
    android:background="@drawable/dialog_rounded_corner_orange">

    <TextView
        android:id="@+id/custom_title"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="@string/helpWindowDialogTitle"
        android:fontFamily="@font/quicksand_medium"
        android:textSize="@dimen/popupTextDimension"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/logoutTextTitleMarginBottom"/>

    <TextView
        android:id="@+id/custom_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/helpWindowDialogMessage"
        android:fontFamily="@font/quicksand_medium"
        android:textAlignment="center"
        android:textSize="@dimen/popupTextDimension"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/logoutQuestionMarginBottom"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <ImageButton
            android:layout_width="@dimen/playAudioButtonDimension"
            android:layout_height="@dimen/playAudioButtonDimension"
            android:layout_gravity="center_horizontal"
            android:background="@color/transparent"
            android:scaleType="centerInside"
            android:id="@+id/play_audio"
            android:src="@drawable/play_button_child"/>

        <ImageButton
            android:layout_width="@dimen/playAudioButtonDimension"
            android:layout_height="@dimen/playAudioButtonDimension"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/stop_audio"
            android:background="@color/transparent"
            android:scaleType="centerInside"
            android:id="@+id/stop_audio"
            android:visibility="gone"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:id="@+id/closeButton"
            android:fontFamily="@font/quicksand_medium"
            app:cornerRadius="8dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorBackground_primary"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/closeButtonOrContinueButtonMarginTop"
            android:elevation="10dp"
            android:textSize="@dimen/closeButtonOrContinueButtonMarginTop"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="@string/closePopupButton"/>

    </LinearLayout>

</LinearLayout>