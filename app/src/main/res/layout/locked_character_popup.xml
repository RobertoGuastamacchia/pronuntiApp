<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/dialog_rounded_corner_orange">

    <TextView
        android:id="@+id/custom_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/logoutTextTitleMarginBottom"
        android:text="@string/characterNotAvaibleTitle"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/popupTextDimension"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/popupTextDimension"
        android:textColor="@color/colorPrimary"
        android:text="@string/infoCoinCharacters"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTopCoinInLockedCharacterPopup"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/popupTextDimension"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textAlignment="center"/>

        <ImageView
            android:layout_width="@dimen/coin_image_dimension"
            android:layout_height="@dimen/coin_image_dimension"
            android:src="@drawable/coin_removebg_preview">
        </ImageView>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:id="@+id/closeButton"
        app:cornerRadius="8dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/closeButtonOrContinueButtonMarginTop"
        android:elevation="10dp"
        android:textSize="@dimen/closeButtonOrContinueButtonMarginTop"
        android:backgroundTint="@color/red"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="@string/closePopupButton"/>

</LinearLayout>