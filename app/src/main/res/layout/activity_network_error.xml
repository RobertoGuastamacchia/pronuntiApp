<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".patient.child.homepage.exercises.LoadingPostExerciseFragment"
    android:background="@color/colorBackground_primary">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/imagePostExerciseDimension"
            android:layout_height="@dimen/imagePostExerciseDimension"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/network_error_icon"
            android:id="@+id/image"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:singleLine="false"
            android:layout_marginStart="@dimen/imageDescriptionPostExerciseMarginStartAndEnd"
            android:layout_marginEnd="@dimen/imageDescriptionPostExerciseMarginStartAndEnd"
            android:fontFamily="@font/quicksand_medium"
            android:textSize="@dimen/imageDescriptionPostExercise"
            android:text="@string/networErrorString"
            android:textColor="@color/white"
            android:id="@+id/imageDescription"></TextView>

    </LinearLayout>


</FrameLayout>