<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/dialog_rounded_corner_orange">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/weeklyTitleSize"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:text="@string/weeklyGoals"
        android:textAlignment="center"
        android:layout_marginBottom="@dimen/titleWeeklyGoalsMarginBottom"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/linearLayout">

            <RelativeLayout
                android:id="@+id/firstGoalRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTopBetweenGoals">

                <TextView
                    android:id="@+id/firstGoalText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="@dimen/marginTextWeeklyGoals"
                    android:fontFamily="@font/quicksand_medium"
                    android:text="@string/firstGoal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textDimenWeeklyGoals" />

                <TextView
                    android:id="@+id/firstGoalCoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/marginCoinWeeklyGoals"
                    android:layout_toStartOf="@+id/firstGoalSymbolCoin"
                    android:fontFamily="@font/quicksand_medium"
                    android:text="@string/firstGoalCoinValue"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textDimenWeeklyGoals" />
                <ImageView
                    android:id="@+id/firstGoalSymbolCoin"
                    android:layout_width="@dimen/symbolCoinWeeklyGoals"
                    android:layout_height="@dimen/symbolCoinWeeklyGoals"
                    android:src="@drawable/coin_removebg_preview"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>
                <ImageView
                    android:id="@+id/firstGoalSymbolDone"
                    android:layout_width="@dimen/symbolCoinWeeklyGoals"
                    android:layout_height="@dimen/symbolCoinWeeklyGoals"
                    android:src="@drawable/goals_completed"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="invisible"/>
            </RelativeLayout>
            <ProgressBar
                android:id="@+id/firstGoalProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/primary"/>

            <RelativeLayout
                android:id="@+id/secondGoalRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTopBetweenGoals">

                <TextView
                    android:id="@+id/secondGoalText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="@dimen/marginTextWeeklyGoals"
                    android:text="@string/secondGoal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textDimenWeeklyGoals" />

                <TextView
                    android:id="@+id/secondGoalCoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/marginCoinWeeklyGoals"
                    android:layout_toStartOf="@+id/secondGoalSymbolCoin"
                    android:fontFamily="@font/quicksand_medium"
                    android:text="@string/secondGoalCoinValue"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textDimenWeeklyGoals" />
                <ImageView
                    android:id="@+id/secondGoalSymbolCoin"
                    android:layout_width="@dimen/symbolCoinWeeklyGoals"
                    android:layout_height="@dimen/symbolCoinWeeklyGoals"
                    android:src="@drawable/coin_removebg_preview"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>
                <ImageView
                    android:id="@+id/secondGoalSymbolDone"
                    android:layout_width="@dimen/symbolCoinWeeklyGoals"
                    android:layout_height="@dimen/symbolCoinWeeklyGoals"
                    android:src="@drawable/goals_completed"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="invisible"/>
            </RelativeLayout>
            <ProgressBar
                android:id="@+id/secondGoalProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/primary"/>

            <RelativeLayout
                android:id="@+id/thirdGoalRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTopBetweenGoals">

                <TextView
                    android:id="@+id/thirdGoalText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="@dimen/marginTextWeeklyGoals"
                    android:text="@string/thirdGoal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textDimenWeeklyGoals" />

                <TextView
                    android:id="@+id/thirdGoalCoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/marginCoinWeeklyGoals"
                    android:layout_toStartOf="@+id/thirdGoalSymbolCoin"
                    android:fontFamily="@font/quicksand_medium"
                    android:text="@string/thirdGoalCoinValue"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textDimenWeeklyGoals" />
                <ImageView
                    android:id="@+id/thirdGoalSymbolCoin"
                    android:layout_width="@dimen/symbolCoinWeeklyGoals"
                    android:layout_height="@dimen/symbolCoinWeeklyGoals"
                    android:src="@drawable/coin_removebg_preview"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>
                <ImageView
                    android:id="@+id/thirdGoalSymbolDone"
                    android:layout_width="@dimen/symbolCoinWeeklyGoals"
                    android:layout_height="@dimen/symbolCoinWeeklyGoals"
                    android:src="@drawable/goals_completed"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="invisible"/>
            </RelativeLayout>
            <ProgressBar
                android:id="@+id/thirdGoalProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/primary"/>

            <RelativeLayout
                android:id="@+id/fourthGoalRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTopBetweenGoals">

                <TextView
                    android:id="@+id/fourthGoalText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="@dimen/marginTextWeeklyGoals"
                    android:text="@string/fourthGoal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textDimenWeeklyGoals" />

                <TextView
                    android:id="@+id/fourthGoalCoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/marginCoinWeeklyGoals"
                    android:layout_toStartOf="@+id/fourthGoalSymbolCoin"
                    android:fontFamily="@font/quicksand_medium"
                    android:text="@string/fourthGoalCoinValue"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textDimenWeeklyGoals" />
                <ImageView
                    android:id="@+id/fourthGoalSymbolCoin"
                    android:layout_width="@dimen/symbolCoinWeeklyGoals"
                    android:layout_height="@dimen/symbolCoinWeeklyGoals"
                    android:src="@drawable/coin_removebg_preview"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>
                <ImageView
                    android:id="@+id/fourthGoalSymbolDone"
                    android:layout_width="@dimen/symbolCoinWeeklyGoals"
                    android:layout_height="@dimen/symbolCoinWeeklyGoals"
                    android:src="@drawable/goals_completed"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="invisible"/>
            </RelativeLayout>
            <ProgressBar
                android:id="@+id/fourthGoalProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/primary"/>

            <RelativeLayout
                android:id="@+id/fifthGoalRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTopBetweenGoals">

                <TextView
                    android:id="@+id/fifthGoalText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="@dimen/marginTextWeeklyGoals"
                    android:fontFamily="@font/quicksand_medium"
                    android:text="@string/fifthGoal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textDimenWeeklyGoals" />

                <TextView
                    android:id="@+id/fifthGoalCoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/marginCoinWeeklyGoals"
                    android:layout_toStartOf="@+id/fifthGoalSymbolCoin"
                    android:fontFamily="@font/quicksand_medium"
                    android:text="@string/fifthGoalCoinValue"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textDimenWeeklyGoals" />
                <ImageView
                    android:id="@+id/fifthGoalSymbolCoin"
                    android:layout_width="@dimen/symbolCoinWeeklyGoals"
                    android:layout_height="@dimen/symbolCoinWeeklyGoals"
                    android:src="@drawable/coin_removebg_preview"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>
                <ImageView
                    android:id="@+id/fifthGoalSymbolDone"
                    android:layout_width="@dimen/symbolCoinWeeklyGoals"
                    android:layout_height="@dimen/symbolCoinWeeklyGoals"
                    android:src="@drawable/goals_completed"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="invisible"/>
            </RelativeLayout>
            <ProgressBar
                android:id="@+id/fifthGoalProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/primary"/>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:id="@+id/closeButton"
        app:cornerRadius="8dp"
        android:backgroundTint="@color/primary"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/closeButtonWeeklyGoalsMarginTop"
        android:elevation="10dp"
        android:textSize="@dimen/closeButtonOrContinueButtonMarginTop"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="@string/closePopupButton"/>

</LinearLayout>