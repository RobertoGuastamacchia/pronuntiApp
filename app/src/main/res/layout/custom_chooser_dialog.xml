<!-- custom_chooser_dialog.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/dialog_rounded_corner_gray"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_medium"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:text="@string/chooseAnOption"
        android:textColor="@android:color/black"
        android:textSize="@dimen/chooserTitleDimension" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/galleryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/marginTopBetweenButton"
        android:backgroundTint="@color/primary"
        android:fontFamily="@font/quicksand_medium"
        android:text="@string/gallery"
        android:textSize="@dimen/chooserTextButtonDimension"
        app:cornerRadius="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cameraButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/marginTopBetweenButton"
        android:backgroundTint="@color/primary"
        android:fontFamily="@font/quicksand_medium"
        android:text="@string/camera"
        android:textSize="@dimen/chooserTextButtonDimension"
        app:cornerRadius="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancelButton"
        android:layout_marginTop="@dimen/marginTopBetweenButton"
        app:cornerRadius="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_medium"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/red"
        android:textSize="@dimen/chooserTextButtonDimension"
        android:text="@string/cancel" />

</LinearLayout>
