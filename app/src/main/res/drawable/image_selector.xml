<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Stato quando Ã¨ selezionato -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <stroke
                android:width="5dp"
                android:color="@android:color/holo_green_light" />

            <padding
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <!-- Stato predefinito (non selezionato) -->
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <stroke
                android:width="5dp"
                android:color="@color/colorBackground_primary" />

            <padding
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
</selector>
